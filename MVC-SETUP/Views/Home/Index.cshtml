    <h2>Twitter-@@santozpalmer</h2>
    @{
        int k = 29;
    }
    @if (k <= 10)
    {
        <h1>Hello my name is (IF statement)</h1>
    }
    else
    {
        <h1>My name is (Else statement)</h1>
